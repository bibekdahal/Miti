<resources>

    <!-- Dark theme -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primaryText</item>
        <item name="android:textColorSecondary">@color/secondaryText</item>
        <item name="android:textColorTertiary">@color/tertiaryText</item>
    </style>

    <!-- Light theme -->
    <style name="AlternateAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primaryTextAlternate</item>
        <item name="android:textColorSecondary">@color/secondaryTextAlternate</item>
        <item name="android:textColorTertiary">@color/tertiaryTextAlternate</item>
    </style>


</resources>